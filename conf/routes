# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                            controllers.Application.index()
GET         /menu/:name                  controllers.Application.menu(name)
GET         /pages/:page                 controllers.Application.page(page)
GET         /tools/sparql                controllers.Application.sparql
GET         /logo/:variant               controllers.Application.logo(variant)


GET         /users/login                 controllers.Login.login(username:String,password:String)
GET         /users/register              controllers.Login.register(username:String,email,password:String)
GET         /users/logout                controllers.Login.logout()



GET         /query                       controllers.Queries.main()
GET         /query/main                  controllers.Queries.main()
GET         /schema                      controllers.Schema.sankey()
GET         /schema/sankey               controllers.Schema.sankey()
GET         /schema/distortion           controllers.Schema.distortion()

GET         /images                      controllers.Uploader.images
POST        /upload                      controllers.Uploader.upload
POST        /image/upload                controllers.Uploader.imageUpload



#GET         /results              controllers.Queries.results()


GET         /webjars/*file               controllers.WebJarAssets.at(file)

GET         /test/newdomain/:name        controllers.Tests.changeDomain(name)
GET         /test/menu                   controllers.Tests.menu
GET         /test/message                controllers.Tests.message
GET         /test/sigma                  controllers.Tests.sigma
GET         /test/mail                   controllers.Tests.mailMe


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.at(path="/public", file)
GET         /public/*file                controllers.Assets.at(path="/public", file)
GET         /files/*file                controllers.Assets.at(path="/public", file)

#GET         /files/*file                controllers.Assets.at(path="/files", file)

#GET         /ckeditor/*file           controllers.Assets.at(path="/ckeditor", file)





