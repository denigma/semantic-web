# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                         controllers.Application.index()
GET         /users/login              controllers.Application.login(username:String,password:String)
GET         /users/register           controllers.Application.register(username:String,email,password:String)
GET         /users/logout             controllers.Application.logout()
GET         /menu/:name               controllers.Application.menu(name)

GET         /query                    controllers.Queries.main()
GET         /query/main               controllers.Queries.main()
GET         /schema                   controllers.Schema.sankey()
GET         /schema/sankey            controllers.Schema.sankey()
GET         /schema/distortion        controllers.Schema.distortion()

#quries
GET         /models/sparql            controllers.Queries.sendQuery(query:String)
#POST       /models/sparql/bind         controllers.Queries.bindQuery()
#POST       /models/sparql/search       controllers.Queries.searchForQuery()



#GET         /results              controllers.Queries.results()
GET         /pages/*page              controllers.Application.page(page)

#GET        /sparql                      controllers.Graphs.vertices(id:String ="")
#GET        /sparql/:id                  controllers.Graphs.vertices(id:String)

#GET        /upload             controllers.Application.testUpload
POST        /upload                   controllers.Application.upload

GET         /webjars/*file            controllers.WebJarAssets.at(file)


GET         /test/iri                 controllers.Tests.iri
GET         /test/item                controllers.Tests.item
GET         /test/list                controllers.Tests.list
GET         /test/strs              controllers.Tests.strs

GET         /test/message             controllers.Tests.message
GET         /test/menu                controllers.Tests.menu
GET         /test/sigma               controllers.Tests.sigma


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)
GET         /public/*file             controllers.Assets.at(path="/public", file)

#GET         /*file                        controllers.Assets.at(path="/public", file)





