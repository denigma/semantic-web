# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                     controllers.Application.index(controller="query",action="main")
GET         /query                controllers.Queries.main()
GET         /query/main           controllers.Queries.main()
GET         /models/sparql        controllers.Queries.query(query:String)
#GET         /results              controllers.Queries.results()
GET         /all                  controllers.Queries.all
#GET        /sparql                      controllers.Graphs.vertices(id:String ="")
#GET        /sparql/:id                  controllers.Graphs.vertices(id:String)

#GET        /upload             controllers.Application.testUpload
POST        /upload               controllers.Application.upload


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.at(path="/public", file)

GET         /test                 controllers.Tests.sigma
GET         /test/editor          controllers.Tests.editor
GET         /test/sigma           controllers.Tests.sigma

